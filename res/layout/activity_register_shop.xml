<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siphatloproject.RegisterShopActivity" 
    android:background="@drawable/gray3">

    <EditText
        android:id="@+id/edAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edShopName"
        android:layout_below="@+id/edShopName"
        android:layout_marginTop="17dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Enter adress"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/edShopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edOwnPhone"
        android:layout_below="@+id/edOwnPhone"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Enter shop name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edOwnPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edOwnSurn"
        android:layout_below="@+id/edOwnSurn"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Enter phone number" />

    <EditText
        android:id="@+id/edShopEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edAddress"
        android:layout_below="@+id/edAddress"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnRegShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edShopEmail"
        android:layout_alignRight="@+id/edShopEmail"
        android:layout_below="@+id/edShopEmail"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_design"
        android:text="Register"
        android:textColor="#FE9A2E" />

    <TextView
        android:id="@+id/txtWelcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Provide the Following"
        android:textColor="#B40404"
        android:textSize="27sp" />

    <EditText
        android:id="@+id/edOwName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWelcom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Enter name" />

    <EditText
        android:id="@+id/edOwnSurn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edOwName"
        android:layout_below="@+id/edOwName"
        android:layout_marginTop="14dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Enter Surname" />

</RelativeLayout>
